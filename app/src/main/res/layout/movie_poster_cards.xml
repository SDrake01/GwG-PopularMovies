<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_hub_poster_cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/hub_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hub_movie_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/movie_hub_logo_full"
            app:layout_constraintDimensionRatio="H,1:1.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hub_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titleBackground"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_hub_movie_image"
            app:layout_constraintEnd_toEndOf="@id/iv_hub_movie_image"
            app:layout_constraintLeft_toLeftOf="@+id/iv_hub_movie_image"
            app:layout_constraintRight_toRightOf="@+id/iv_hub_movie_image"
            app:layout_constraintStart_toStartOf="@id/iv_hub_movie_image"
            tools:text="Movie Title" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>